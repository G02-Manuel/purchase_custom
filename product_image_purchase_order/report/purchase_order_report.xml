<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="custom_external_layout_background" inherit_id="web.external_layout_boxed">
        <xpath expr="//div[@class='header']" position="replace">
            <div class="header" t-att-style="report_header_style">
                <div class="o_boxed_header">
                    <div class="text-center">
                        <img t-if="company.seq_company_logo" t-att-src="image_data_uri(company.seq_company_logo)" class="center-block" alt="Logo"/>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
    <template id="report_purchaseorder_document_lab">
        <t t-call="web.external_layout">
            <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)" />
            <div class="page">
                <div class="oe_structure" />

                <h2 t-if="o.state == 'draft'">Request for Quotation #<span t-field="o.name" />
                </h2>
                <h2 t-if="o.state in ['sent', 'to approve']">Purchase Order #<span t-field="o.name" />
                </h2>
                <h2 t-if="o.state in ['purchase', 'done']">Purchase Order Confirmation #<span t-field="o.name" />
                </h2>
                <h2 t-if="o.state == 'cancel'">Cancelled Purchase Order #<span t-field="o.name" />
                </h2>

                <table class="table table-sm o_main_table">
                    <thead>
                        <tr>
                            <th>
                                <strong>Dirección de Envío</strong>
                            </th>
                            <th>
                                <strong>Provider</strong>
                            </th>
                            <th>
                                <strong>Fecha de Orden</strong>
                            </th>
                            <th>
                                <strong>Nuestra referencia de pedido</strong>
                            </th>
                            <th>
                                <strong>Proyecto</strong>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="text-center">
                                <span t-field="o.dest_address_id" />
                            </td>
                            <td class="text-center">
                                <span t-field="o.partner_id" />
                            </td>
                            <td class="text-center">
                                <span t-field="o.date_order" />
                            </td>
                            <td class="text-center">
                                <span t-field="o.name" />
                            </td>
                            <td class="text-center">
                                <span>Proyecto</span>
                            </td>
                        </tr>
                    </tbody>
                </table>

                <table class="table table-sm o_main_table">
                    <thead>
                        <tr>
                            <th class="text-center" style="width: 30%">
                                <strong>Imagen</strong>
                            </th>
                            <th>
                                <strong>Description</strong>
                            </th>
                            <th>
                                <strong>Taxes</strong>
                            </th>
                            <th class="text-center">
                                <strong>Date Req.</strong>
                            </th>
                            <th class="text-right">
                                <strong>Qty</strong>
                            </th>
                            <th class="text-right">
                                <strong>Unit Price</strong>
                            </th>
                            <th class="text-right">
                                <strong>Amount</strong>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="o.order_line" t-as="line">
                            <td class="text-center">
                                <img t-if="o.order_line.image_small" t-att-src="'data:image/png;base64,%s' % to_text(o.order_line.image_small)" style="width: 30%" />
                            </td>
                            <td>
                                <span t-field="line.name" />
                            </td>
                            <td>
                                <span t-esc="', '.join(map(lambda x: x.name, line.taxes_id))" />
                            </td>
                            <td class="text-center">
                                <span t-field="line.date_planned" />
                            </td>
                            <td class="text-right">
                                <span t-field="line.product_qty" />
                                <span t-field="line.product_uom.name" groups="uom.group_uom" />
                            </td>
                            <td class="text-right">
                                <span t-field="line.price_unit" />
                            </td>
                            <td class="text-right">
                                <span t-field="line.price_subtotal" t-options='{"widget": "monetary", "display_currency": o.currency_id}' />
                            </td>
                        </tr>
                    </tbody>
                </table>

                <div id="total" class="row justify-content-end">
                    <div class="col-4">
                        <table class="table table-sm">
                            <tr class="border-black">
                                <td>
                                    <strong>Subtotal</strong>
                                </td>
                                <td class="text-right">
                                    <span t-field="o.amount_untaxed" t-options='{"widget": "monetary", "display_currency": o.currency_id}' />
                                </td>
                            </tr>
                            <tr>
                                <td>Taxes</td>
                                <td class="text-right">
                                    <span t-field="o.amount_tax" t-options='{"widget": "monetary", "display_currency": o.currency_id}' />
                                </td>
                            </tr>
                            <tr class="border-black o_total">
                                <td>
                                    <strong>Total</strong>
                                </td>
                                <td class="text-right">
                                    <span t-field="o.amount_total" t-options='{"widget": "monetary", "display_currency": o.currency_id}' />
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>

                <p t-field="o.notes" />
                <div class="oe_structure" />
            </div>
        </t>
    </template>

    <template id="report_purchaseorder_lab">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="product_image_purchase_order.report_purchaseorder_document_lab" t-lang="o.partner_id.lang" />
            </t>
        </t>
    </template>
</odoo>
