<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<template id = "purchase_report_inherit_id" inherit_id = "purchase.report_purchaseorder_document">
		<xpath expr="//table[1]/thead/tr[1]/th[1]" position="before">
			<th class="text-center" style="width: 30%">Imagen</th>
		</xpath>
		<xpath expr="//table[1]/tbody/tr[1]/td[1]" position="before">
			<td class="text-center">
				<img t-if="line.image_small" t-att-src="'data:image/png;base64,%s' % to_text(line.image_small)" style="width: 30%" />
			</td>
		</xpath>
	</template>

	<template id = "purchase_quotation_report_inherit_id" inherit_id = "purchase.report_purchasequotation_document">
		<xpath expr="//table[1]/thead/tr[1]/th[1]" position="before">
			<th class="text-center" style="width: 30%">Image</th>
		</xpath>
		<xpath expr="//table[1]/tbody/tr[1]/td[1]" position="before">
			<td class="text-center">
				<img t-if="order_line.image_small" t-att-src="'data:image/png;base64,%s' % to_text(order_line.image_small)" style="width: 30%" />
			</td>
		</xpath>
	</template>

</odoo>
                
